# Base image
FROM python:3.11-slim

# Set environment variables to avoid prompts and ensure UTF-8 encoding
ENV PYTHONUNBUFFERED=1 \
    PYTHONIOENCODING=utf-8 \
    DEBIAN_FRONTEND=noninteractive \
    PLAYWRIGHT_BROWSERS_PATH=0

# Install OS-level dependencies
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    unzip \
    gnupg \
    libnss3 \
    libatk-bridge2.0-0 \
    libxss1 \
    libasound2 \
    libxshmfence1 \
    libgbm-dev \
    libgtk-3-0 \
    libx11-xcb1 \
    libxcb-dri3-0 \
    xvfb \
    ca-certificates \
    build-essential \
    python3-dev \
    nodejs \
    npm \
 && rm -rf /var/lib/apt/lists/*

# Install Playwright and Node.js dependencies
RUN npm install -g playwright && \
    npx playwright install --with-deps

# Create app directory
WORKDIR /app

# Copy Python requirements (if any)
COPY requirements.txt /app/requirements.txt
COPY pip-requirements.txt /app/pip-requirements.txt

# Install Python dependencies
RUN pip install --upgrade pip && \
    pip install -r /app/pip-requirements.txt && \
    pip install -r /app/requirements.txt || true && \
    pip install beautifulsoup4 google-api-python-client google-auth-oauthlib python-dotenv

# Copy VPN configuration files
COPY externals/VPNs /app/externals/VPNs

# Copy script directory
COPY "Skip Tracing" /app/Skip Tracing

# Set working directory to script location
WORKDIR /app/Skip Tracing

# Set default command to run the parser
CMD ["python", "truppl_parser.py"]
